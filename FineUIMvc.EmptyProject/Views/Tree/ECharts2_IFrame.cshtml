@{
    ViewBag.Title = "EChart2_IFrame";
    Layout = "";
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml" style="height: 100%">
<head>
    <title>Document</title>
    <script src="~/res/js/echarts.js"></script>
    <script>
        window.onload = function () {
            var myChart = echarts.init(document.getElementById('main'));

            //置顶图表的配置项和数据
            var option = {
                //深色背景
                backgroundColor: '#2c343c',
                textStyle: {
                    color: 'rgba(255, 255, 255, 0.3)'
                },
                //设置标签视觉的引导线
                labelLine: {
                    lineStyle: {
                        color: 'rgba(255,255,255,0.3)'
                    }
                },
                series: [
                    {
                        name: '访问来源',
                        type: 'pie',
                        radius: '60%',
                        roseType: 'angle', //设置成南丁格尔图
                        data: [
                            { value: 235, name: '视频广告', itemStyle: { color: '#c23531' } },   //分别设置扇形的颜色
                            { value: 274, name: '联盟广告', itemStyle: { color: '#ff0080' } },
                            { value: 310, name: '邮件营销' },
                            { value: 335, name: '直接访问' },
                            { value: 400, name: '搜索引擎' }
                        ]
                    }
                ],
                //设置阴影、设置扇形的颜色
                visualMap: {
                    //不显示visualMap组件，只用于明暗度的映射
                    show: false,
                    min: 80,
                    max: 600,
                    inRange: {
                        // 明暗度的范围是 0 到 1
                        colorLightness: [0, 1]
                    }
                },
                itemStyle: {
                    // 阴影的大小
                    shadowBlur: 100,
                    // 阴影水平方向上的偏移
                    shadowOffsetX: 0,
                    // 阴影垂直方向上的偏移
                    shadowOffsetY: 0,
                    // 阴影颜色
                    shadowColor: 'rgba(0, 0, 0, 0.5)',
                    //鼠标 hover 时候的高亮样式
                    emphasis: {
                        shadowBlur: 200,
                        shadowColor: 'rgba(100, 100, 0, 0.5)'
                    },
                    // //设置扇形颜色
                    color: '#c23531',
                    shadowBlur: 200,
                    shadowColor: 'rgba(0,0,0,0.5)'

                }
            };
            myChart.setOption(option);
        };
    </script>


</head>
<body style="height: 100%; margin: 0">
    <div id="main" style="height:100%;"></div>
</body>
</html>
